@model Final.Models.OptionSelected
@using (Html.BeginForm("ByPublisherDisplay", "Publisher", FormMethod.Post))
{
    var publisherList = new List<SelectListItem>();
    var formattedName = "";
    var i = 0;

    var publisherItem = new SelectListItem()
    {
        Text = "Select a Publisher",
        Value = ""
    };

    publisherList.Add(publisherItem);

    foreach (var publisherName in ViewBag.publisherNames)
    {
        formattedName = "";
        formattedName = publisherName;

        for (int j = 0; j < 1; j++)
        {
            var publisherLoopItem = new SelectListItem()
            {
                Text = formattedName,
                Value = ViewBag.publisherCodes[i]
            };

            publisherList.Add(publisherLoopItem);
            i++;
        }     
    }
    @Html.DropDownListFor(selected => selected.optionSelected, new SelectList(publisherList, "Value", "Text"), new { onChange = "this.form.submit();" })
}